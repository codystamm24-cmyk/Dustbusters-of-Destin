{
  "version": "0.2.0",
  "configurations": [
    
    {
      "type": "java",
      "request": "attach",
      "name": "Attach to Java Backend",
      "hostName": "localhost",
      "port": 5005
    },
    {
      "type": "chrome",
      "request": "launch",
      "name": "Launch Chrome Frontend",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}/web",
      "sourceMaps": true,
      "sourceMapPathOverrides": {
        "webpack:///*": "${webRoot}/*"
      }
    },
    {
      "type": "chrome",
      "request": "attach",
      "name": "Attach to Chrome",
      "port": 9222,
      "webRoot": "${workspaceFolder}"
    }
  ],
  "compounds": [
    {
      "name": "Debug Full Stack (Java + Frontend)",
      "configurations": ["Attach to Java Backend", "Launch Chrome Frontend"]
    }
  ]
}